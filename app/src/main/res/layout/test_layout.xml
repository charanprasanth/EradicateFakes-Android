<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.skydoves.elasticviews.ElasticLayout
        app:layout_scale="1.03"
        app:layout_duration="500"
        android:id="@+id/logout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/logout"
        android:layout_margin="15dp"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:layout_below="@id/logout"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eradicate Fakes"
        android:layout_below="@id/text1"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGO and DESCRIPTION"
        android:layout_below="@id/text2"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:layout_marginTop="150dp"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:id="@+id/page"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sheet_bg"
        android:padding="8dp"
        android:paddingBottom="10dp" >

        <com.skydoves.elasticviews.ElasticLayout
            app:layout_scale="1.03"
            app:layout_duration="500"
            android:id="@+id/scanQRBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:background="@drawable/button_bg"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:text="Scan the QR Code"
                android:gravity="center"
                android:textSize="20sp"/>

        </com.skydoves.elasticviews.ElasticLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@id/scanQRBtn"
            android:textColor="@color/white"
            android:text="Click the above button to scan the QR code and verify the product's originality"
            android:gravity="center"
            android:textSize="17sp"/>

    </RelativeLayout>

</RelativeLayout>